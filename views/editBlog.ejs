<%- include('include/header') %>
    <div class="container">
        <form id="editBlog">
            <input type="hidden" value="<%= blog.id %>" name="id">
            <div class="form-group my-2">
                <label for="title">Title</label>
                <input id="title" name="title" type="text" class="form-control" value="<%= blog.title %>">
            </div>
            <div class="form-group my-2">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control" cols="30" rows="10"><%= blog.description %></textarea>
            </div>
            <div class="form-group my-2">
                <label for="image">Image</label>
                <input id="image" type="file" name="image" accept="image/png, image/gif, image/jpeg"
                    class="form-control">
            </div>
            <div class="form-group my-2 text-end">
                <button class="btn btn-dark btn-sm" type="submit">Edit Blog</button>
            </div>
        </form>
        <div id="liveAlertPlaceholder"></div>
    </div>
    <%- include('include/footer') %>